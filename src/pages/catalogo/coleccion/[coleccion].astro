---
export const prerender = false

import Title from '@/components/ui/Title.astro'
import Layout from '@/layouts/Layout.astro'
import { ItemsList } from '@/components/catalogue/ItemsList.tsx'

const { coleccion = '' } = Astro.params
---

<Layout title='Catálogo'>
	<main class='min-h-[1000px] pt-10 xl:container'>
		<div
			class='flex flex-col pb-10 lg:gap-y-32 items-center border-b-2 border-mediumGray'
		>
			<Title
				title='Todos los productos'
				subtitle='Revisa nuestras diferentes prendas y compra las que más te gusten'
			/>
		</div>
		<ItemsList params={coleccion} client:load />
	</main>
</Layout>
